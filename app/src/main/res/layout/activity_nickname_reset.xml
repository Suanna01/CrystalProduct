<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/nicknameLine1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_radius"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textChangeNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="닉네임 변경"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageView
        android:id="@+id/arrowDownIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintTop_toBottomOf="@id/nicknameLine1"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    <EditText
        android:id="@+id/EditTextNickname"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="닉네임 입력(최대 7자리)"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/arrowDownIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"

        />


    <Button
        android:id="@+id/checkNickname"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="확인"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/EditTextNickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:backgroundTint="#4D538E"
        android:background="@drawable/round_corner"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_icon"
        />
</androidx.constraintlayout.widget.ConstraintLayout>