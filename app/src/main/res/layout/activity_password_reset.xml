<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/resetPWLine1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_radius"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/textResetPW1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="23dp"
        android:text="비밀번호 재설정"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textResetPW2"
        android:text="가입하신 Email에서 비밀번호 재설정이 가능합니다."
        android:layout_marginTop="220dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/editTextUserEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:hint="이메일 주소"
        android:inputType="textEmailAddress"
        android:theme="@style/editText"
        app:layout_constraintTop_toBottomOf="@id/textResetPW2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/buttonFind"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:text="이메일 발송"
        android:textColor="@color/black"
        android:background="@drawable/round_corner"
        app:layout_constraintTop_toBottomOf="@id/editTextUserEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:backgroundTint="#C3CAEC"/>

    <Button
        android:id="@+id/login_go2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="로그인"
        app:backgroundTint="#4D538E"
        android:background="@drawable/round_corner"
        app:layout_constraintTop_toBottomOf="@id/buttonFind"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>